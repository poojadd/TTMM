<%= simple_form_for @event, :html => {:class => "form-horizontal"} do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <fieldset>
      <div class="control-group">
        <label class="control-label" for="selectbasic">Event type</label>

        <div class="controls">
          <%= f.association :event_type, label: false %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="selectbasic">Date</label>

        <div class="controls">
          <%= f.date_select :date, label: false %>
        </div>
      </div>

      <%= f.label :amount_paid %>
      <br>
      <%= f.fields_for :event_transactions do |builder| %>

          <div class="control-group">

            <div class="controls">
              <%= render "event_transaction_fields", :f => builder %>
            </div>
          </div>
      <% end %>

      <div class="control-group">
        <label class="control-label" for="selectbasic">Location</label>

        <div class="controls">
          <%= f.input :location, label: false %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="singlebutton"></label>

        <div class="btn-group">


          <%= f.submit "Submit", :class => "btn btn-primary" %>
          <%= link_to 'All events', events_path, :class => "btn" %>
        </div>
      </div>


    </fieldset>
<% end %>
