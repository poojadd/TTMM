    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
    <div class="field">
      <%= f.label :amount_paid %><br>
    <%= f.fields_for :event_transactions do |builder| %>

        <%= render "event_transaction_fields", :f => builder %>
    <% end %>
</div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
