<p id="notice"><%= notice %></p>

<p>
  <strong>Event type:</strong>
  <%= @event.event_type_id %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Total User:</strong>
  <%= @event.users.count %>
</p>
<% @event.event_transactions.each do |et|  %>
    <% if et.attended %>
    <p>    <%= "#{et.user.email}:#{et.paid}" %><br/> </p>
    <% end %>
<% end %>
<p>
  <strong>Amount:</strong>
  <%= @event.amount %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
